<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>

    <% include ./partials/navbar.ejs %>

      <main class="container">
         <% include ./partials/messages.ejs %>
        <!-- Jumbotron Header -->
        <header class="page-header small text-center" "pagination-centered">
          <h1 class="display-3">Blocpedia: Social, Markdown Wikis</h1>
        </header>

        <section class="jumbotron text-center">
            <h3 class="card-title">Create and share Markdown Wikis</h3>
            <% if(!currentUser) { %>
              <a href="/users/sign_up" class="btn btn-primary btn-lg">Sign Up</a>
              <a href="/users/sign_in" class="btn btn-primary btn-lg">Sign In</a>
            <% } %>

        </section>

        <section class="row justify-content-center plans">
          <% if(!currentUser) { %>
            <a href='/wikis' class="btn btn-success btn-sm" style='display: inline-block'>Take me to the wikis!</a>
            <a href='/users/account' class="btn btn-info btn-sm" style='display: inline-block'>My Profile</a>
            <% if(currentUser !== "premium") { %>
            <a href='/users/upgrade' class="btn btn-primary btn-sm" style='display: inline-block'>Upgrade to Premium</a>
            <% } %>
          <% } %>
        </section>

      </main>

      <% include ./partials/baseScripts.ejs %>

    </body>
</html>
