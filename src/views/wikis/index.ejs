<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <main class="main-index-wikis">
        <h1>Wikis</h1>
        <% include ../static/partials/messages.ejs %>
        <table class="table table-bordered table-hover table-index-wikis">

            <thead>
                <tr>
                  <th class="table-wikis-head">Wikis</th>
                  <th class="table-edit-head">edit</th>
                  <th>delete</th>
                </tr>
              </thead>
              <tbody>
                <% wikis.forEach((wiki) => { %>
                  <tr>
                    <td>
                      <a href="/wikis/<%= wiki.id %>"> <%= wiki.title %> </a>
                    </td>
                    <td>
                      <% if(currentUser.isAdmin()) { %>
                        <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
                      <% } %>
                    </td>
                    <td>
                      <% if(currentUser.isAdmin()) { %>
                      <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                      </form>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
        </table>

        <a href="wikis/new" class="btn btn-primary btn-lg">New wiki</a>

    </main>

  </body>
</html>
